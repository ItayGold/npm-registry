{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "click-date-picker": ["dist/click-date-picker"],
      "click-date-picker/*": ["dist/click-date-picker/*"],
      "click-icon": ["dist/click-icon"],
      "click-icon/*": ["dist/click-icon/*"]
    }
  }
}
